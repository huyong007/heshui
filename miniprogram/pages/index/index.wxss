/**index.wxss**/

page {
  background: #fff;
  width: 100%;
  height: 100%;
}

.head {
  position: relative;
}

.imgRunkids {
  width: 100%;
  z-index: -9999;
  height: 200px;
}

.title {
  position: fixed;
  top: 100px;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
}

.title .mainTitle {
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 62rpx;
}

.title .subTitle {
  font-size: 24rpx;
  font-family: 'Courier New', Courier, monospace;
}

.records {
  margin: 10rpx 30rpx;
  display: flex;
  justify-content: space-around;
  padding-bottom: 15px;
  border-bottom: 1px solid #d9d9d9;
}

.records>view {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}
.number {
  font-weight: 700;
  font-size: 24px;
}

.number-info{
  font-size: 12px;
  color: grey;
}

/**index.wxss**/

page {
    background: #ffffff;
    width: 100%;
    height: 100%;
}

.imgRunkids {
    position: absolute;
    width: 100%;
    z-index: -9999;
    height: 200px;
}

.imgInfo {
    font-size: 12rpx;
    margin-top: 425rpx;
}

.title {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.title .mainTitle {
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 32rpx;
}

.title .subTitle {
    font-size: 24rpx;
    font-family: 'Courier New', Courier, monospace;
}

.takeNotesBtn {
    margin: 15rpx 10rpx;
    background: #53bf1d;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 15rpx;
}

.moreBtn {
    display: inline-flex;
    margin: 15rpx 10rpx;
}

.moreBtn .moreSetting {
    font-size: 20rpx;
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    line-height: 80rpx;
    text-align: center;
    background-color: #53bf1d;

}

.moreBtn .moreAdd {
    margin-left: 5rpx;
    font-size: 20rpx;
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    line-height: 80rpx;
    text-align: center;
    background-color: #53bf1d;
}



.modal {
    width: 650rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    background: #FAFAFA;
    margin: -150px 50rpx 0 50rpx;
    border-radius: 3px;

}

/* 习惯新增按钮/时间/习惯列表 */

.habitContainer {
    display: block;
    margin: 3rpx 7rpx;
}

.controlContainer {
    display: flex;
    flex-direction: row-reverse;
    background: #f6f6f6;
    border: 1rpx solid #f6f6f6;
    height: 100rpx;
    align-items: center;
    border-radius: 10rpx;

}

.habitContainer .controlContainer>view {
    margin: 0 30rpx;

}

.dateContainer {
    display: flex;
    margin: 5rpx 0;
    padding-left: 180rpx;
    justify-content: space-around;
    background: #f6f6f6;
    border: 1rpx solid #f6f6f6;
    height: 100rpx;
    align-items: center;
    border-radius: 10rpx;
    font-size: 24rpx;
}

.habitList {
    display: flex;
    background: #f6f6f6;
    border: 1rpx solid #f6f6f6;
    height: 100rpx;
    margin: 5rpx 0rpx;
    align-items: center;
    border-radius: 10rpx;
}

.habitList {
    padding-left: 10rpx;
}

/* .habitTitle{
    /* width:45%; */
/* } */
.habitCheckBox {
    /* width:55%; */
    display: flex;
    padding-left: 58rpx;
    justify-content: space-around;
    justify-content: center;
    border-radius: 10rpx;
}

/* 新建习惯模态框 */

.modalMask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.85;
    overflow: hidden;
}

.modalMask .modal {
    width: 650rpx;
    height: 400rpx;
    overflow-y: scroll;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 1001;
    background: #FAFAFA;
    opacity: 1;
    margin: -150px 50rpx 0 50rpx;
    border-radius: 7px;
}

.modalMask .modal .title {
    text-align: center;
    padding: 10rpx;
}

.modalMask .modal .content {
    height: 300rpx;
}

input {
    margin: 30rpx 30rpx;
    border-bottom: #000 solid 1rpx;
}

input:hover {
    border-bottom: #53bf1d solid 1rpx;
}

button::after {
    border: none;
}

.modalMask .modal .content .addHabitBtn {
    display: flex;
    flex-direction: row-reverse
}

.modalMask .modal .content .addHabitBtn .btn {
    margin: 30rpx 30rpx;
}

.warning {
    color: #ffffff;
    font-size: 20rpx;
}